<section>
  <div class="container mt-5">
    <div class="alert alert-success" role="alert">
      <h4 class="alert-heading">Order Placed Successfully!</h4>
      <p>Your order has been successfully placed. Below are the order details:</p>
    </div>

    <!-- Order Details Section -->
    <h5>Order Details:</h5>
    {{#if order}}
    <ul class="list-group">
      <li class="list-group-item">
        <strong>Order ID:</strong>
        #{{order.id}}
      </li>
      <li class="list-group-item">
        <strong>Total Amount:</strong>
        Rs. {{order.price}}
      </li>
      <li class="list-group-item">
        <strong>Delivery Address:</strong>
         {{order.address}}
      </li>
      <li class="list-group-item">
        <strong>Contact Number:</strong>
        {{order.phone}}
      </li>
      <li class="list-group-item">
        <strong>Date:</strong>
        {{order.date}}
      </li>
      <!-- You can add more order details here as needed -->
    </ul>
    {{/if}}

    <!-- Continue Shopping or View Orders Button -->
    <div class="mt-3">
      <a href="/" class="btn btn-success">Continue Shopping</a>
      <a href="/order-list" class="btn btn-secondary">View Orders</a>
    </div>
  </div>

</section>