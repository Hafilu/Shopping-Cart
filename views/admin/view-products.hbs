<style>
  .dataTables_filter {
  margin-bottom: 20px; /* Adjust the margin as needed */
}
</style>
<section>
  <div class="container pt-4">
    <div class="row pb-3">
      <a
        href="admin/add-product"
        class="btn btn-success"
        style="width: fit-content;"
      >Add Product</a>
    </div>
    
    <table id="productTable" class="table table-bordered table-striped" style="border-top: 2px solid #000;">
      <thead class="thead-dark"> <!-- Added thead-dark class for a dark background -->
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#if products.length}}
          {{#each products}}
            <tr>
              <th scope="row">{{this.index}}</th>
              <td>{{this.name}}</td>
              <td>{{this.category}}</td>
              <td>{{this.price}}</td>
              <td>{{this.description}}</td>
              <td>
                <img
                  style="max-width: 80px; max-height: 80px;"
                  src="/product-images/{{this.id}}.jpg"
                  alt="{{this.name}}"
                />
              </td>
              <td>
                <a
                  href="/admin/edit-product/{{this.id}}"
                  class="btn btn-success btn-sm"
                >Edit</a>
                <a
                  href="/admin/delete-product/{{this.id}}"
                  class="btn btn-danger btn-sm"
                  onclick="return confirm('Are you sure you want to delete {{this.name}}')"
                >Delete</a>
              </td>
            </tr>
          {{/each}}
        {{else}}
          <tr>
            <td colspan="7">No products available.</td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</section>
<script>
  $(document).ready(function () {
    $('#productTable').DataTable();
  });
</script>
