<div class="container">
  <div class="row">
    <h3 class="text-center mt-3 mb-3">Admin Login</h3>
    <form action="/admin/admin-login" method="post">
      <div class="mb-3">
        <label for="username" class="form-label">UserName</label>
        <input
          type="text"
          class="form-control"
          id="username"
          name="username"
        />
        
      <div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          name="password"
          id="Password"
        />
      </div>
      <div>
      {{#if loginErr}}
      <small class="text-danger">Invalid Credentials</small>
      {{/if}}
      </div>
      <button type="submit" class="btn btn-success mt-2">Login</button>
    </form>
  </div>
</div>